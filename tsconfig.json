{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",

    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "declaration": true,
    "declarationMap": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "strict": false,
    "skipLibCheck": true,
  },
  "include": ["src/**/*.ts"],
}
